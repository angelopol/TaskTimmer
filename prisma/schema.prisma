// Prisma schema
// Default DB: SQLite (dev) -> lightweight, serverless.
// To use MySQL:
//  1. Update .env: DB_PROVIDER="mysql" and define MYSQL_* plus DATABASE_URL.
//  2. Change provider to "mysql" below or use env("DB_PROVIDER") with a shadow database if needed.
//  3. Run: npx prisma migrate dev --name init_mysql
// Example DATABASE_URL: mysql://user:pass@localhost:3306/tasktimmer

generator client {
  provider = "prisma-client-js"
}

datasource db {
  // Provider must be a literal (Prisma validation forbids env() here). Switch manually when needed.
  // For SQLite local dev you could temporarily set: provider = "sqlite" and url = "file:./prisma/dev.db".
  // For production MySQL keep as below and ensure DATABASE_URL is a valid MySQL URL.
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum TimeLogSource {
  PLANNED
  ADHOC
  MAKEUP
}

model User {
  id            String            @id @default(cuid())
  name          String?
  email         String            @unique
  passwordHash  String
  activities    Activity[]
  segments      ScheduleSegment[]
  logs          TimeLog[]
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
}

model Activity {
  id                  String            @id @default(cuid())
  user                User              @relation(fields: [userId], references: [id])
  userId              String
  name                String
  color               String?           // hex color
  weeklyTargetMinutes Int               @default(0)
  active              Boolean           @default(true)
  segments            ScheduleSegment[]
  logs                TimeLog[]
  createdAt           DateTime          @default(now())
  updatedAt           DateTime          @updatedAt
  @@index([userId, name])
  @@unique([userId, name], name: "userId_name")
}

model ScheduleSegment {
  id             String    @id @default(cuid())
  user           User      @relation(fields: [userId], references: [id])
  userId         String
  activity       Activity? @relation(fields: [activityId], references: [id])
  activityId     String?
  weekday        Int       // 1=Monday .. 7=Sunday
  startMinute    Int
  endMinute      Int
  notes          String?
  logs           TimeLog[]
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  // Validity range for historical snapshotting (week-based interpretation)
  effectiveFrom  DateTime  @default(now()) // interpreted as Monday (start of validity)
  effectiveTo    DateTime? // null => open-ended
  @@index([userId, weekday])
  @@index([userId, effectiveFrom, effectiveTo])
}

model TimeLog {
  id               String          @id @default(cuid())
  user             User            @relation(fields: [userId], references: [id])
  userId           String
  activity         Activity?       @relation(fields: [activityId], references: [id])
  activityId       String?
  segment          ScheduleSegment? @relation(fields: [segmentId], references: [id])
  segmentId        String?
  date             DateTime        // store the day (strip time in app logic)
  startedAt        DateTime
  endedAt          DateTime
  minutes          Int
  partial          Boolean         @default(false)
  source           TimeLogSource   @default(PLANNED)
  comment          String?
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  @@index([userId, date])
  @@index([activityId])
}
